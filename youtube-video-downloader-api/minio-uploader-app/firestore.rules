rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla básica: autenticación requerida para todas las operaciones
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas específicas para la colección de videos
    match /videos/{videoId} {
      // Permitir lectura si el usuario está autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura si el usuario es el propietario del video
      // o si es un nuevo documento (creación)
      allow write: if request.auth != null && 
                    (resource == null || 
                     resource.data.userId == request.auth.uid);
    }
    
    // Reglas para la colección de programaciones
    match /schedules/{scheduleId} {
      // Permitir lectura si el usuario está autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura si el usuario es el propietario de la programación
      // o si es un nuevo documento (creación)
      allow write: if request.auth != null && 
                    (resource == null || 
                     resource.data.userId == request.auth.uid);
    }
    
    // Reglas para la colección de publicaciones
    match /publications/{publicationId} {
      // Permitir lectura si el usuario está autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura si el usuario es el propietario de la publicación
      // o si es un nuevo documento (creación)
      allow write: if request.auth != null && 
                    (resource == null || 
                     resource.data.userId == request.auth.uid);
    }
  }
}
